<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".SummaryActivity1">

    <!-- Employee Information Section -->
    <TextView
        android:id="@+id/sectionTitleEmployeeInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Employee Information"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="12dp" />

    <!-- Employee ID Label -->
    <TextView
        android:id="@+id/employeeIdLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Employee ID:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/sectionTitleEmployeeInfo"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="4dp" />

    <!-- Employee ID Value -->
    <TextView
        android:id="@+id/employeeIdTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#FFDEDE"
        android:padding="10dp"
        android:text="12345"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/employeeIdLabel" />

    <!-- Employee Name Label -->
    <TextView
        android:id="@+id/employeeNameLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Employee Name:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/employeeIdTextView"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="4dp" />

    <!-- Employee Name Value -->
    <TextView
        android:id="@+id/employeeNameTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#FFDEDE"
        android:padding="10dp"
        android:text="John Doe"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/employeeNameLabel" />

    <!-- Position Code Label -->
    <TextView
        android:id="@+id/positionCodeLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Position Code:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/employeeNameTextView"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="4dp" />

    <!-- Position Code Value -->
    <TextView
        android:id="@+id/positionCodeTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#FFDEDE"
        android:padding="10dp"
        android:text="A123"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/positionCodeLabel" />

    <!-- Civil Status Label -->
    <TextView
        android:id="@+id/civilStatusLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Civil Status:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/positionCodeTextView"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="4dp" />

    <!-- Civil Status Value -->
    <TextView
        android:id="@+id/civilStatusTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#FFDEDE"
        android:padding="10dp"
        android:text="Married"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/civilStatusLabel" />

    <!-- Days Worked Label -->
    <TextView
        android:id="@+id/daysWorkedLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Days Worked:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/civilStatusTextView"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="4dp" />

    <!-- Days Worked Value -->
    <TextView
        android:id="@+id/daysWorkedTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#FFDEDE"
        android:padding="10dp"
        android:text="20"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/daysWorkedLabel" />

    <!-- Salary Breakdown Section -->
    <TextView
        android:id="@+id/sectionTitleSalaryBreakdown"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Salary Breakdown"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/daysWorkedTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="12dp" />

    <!-- Basic Pay Label -->
    <TextView
        android:id="@+id/basicPayLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Basic Pay:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/sectionTitleSalaryBreakdown"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="4dp" />

    <!-- Basic Pay Value -->
    <TextView
        android:id="@+id/basicPayTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#FFDEDE"
        android:padding="10dp"
        android:text="$2000"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/basicPayLabel" />

    <!-- SSS Contribution Label -->
    <TextView
        android:id="@+id/sssContributionLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="SSS Contribution:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/basicPayTextView"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="4dp" />

    <!-- SSS Contribution Value -->
    <TextView
        android:id="@+id/sssContributionTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#FFDEDE"
        android:padding="10dp"
        android:text="$100"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sssContributionLabel" />

    <!-- Withholding Tax Label -->
    <TextView
        android:id="@+id/withholdingTaxLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Withholding Tax:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/sssContributionTextView"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="4dp" />

    <!-- Withholding Tax Value -->
    <TextView
        android:id="@+id/withholdingTaxTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#FFDEDE"
        android:padding="10dp"
        android:text="$150"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/withholdingTaxLabel" />

    <!-- Net Pay Label -->
    <TextView
        android:id="@+id/netPayLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Net Pay:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toBottomOf="@id/withholdingTaxTextView"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="4dp" />

    <!-- Net Pay Value -->
    <TextView
        android:id="@+id/netPayTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#FFDEDE"
        android:padding="10dp"
        android:text="$1750"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/netPayLabel" />

    <!-- Back Button -->
    <Button
        android:id="@+id/backButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#FF4444"
        android:padding="12dp"
        android:text="Back"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/netPayTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>
